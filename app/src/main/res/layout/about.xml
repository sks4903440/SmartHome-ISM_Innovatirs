<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFCC">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ArduISM for Smart Homes"
        android:id="@+id/textView5"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="ArduISM provides a simple solution to day to
day activities in one's  life be it forgetting to
switch off your charger  before sleeping or
 switching it on when the battery is low.
 Be it switching on your fan during summer as
  per the hotness without moving an inch
  or be it turning on lights smartly as you
  enter your home after a long and tired day.."

            android:id="@+id/textView3"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textColor="#000099"/>




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="In short...\nWelcome to the \nfuture of smart homes"
        android:id="@+id/textView4"
        android:layout_gravity="center"
        android:textColor="#660033"
        android:gravity="center"/>


</LinearLayout>